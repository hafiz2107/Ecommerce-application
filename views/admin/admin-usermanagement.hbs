<div id="wrap" class="container-fluid" style="padding-left: 285px;">
			<div class="">
            <h3>Product Management</h3>
			{{!-- <a href="/admin/add-product" class="btn btn-success mb-3" style="float: right;">Add product</a> --}}
				<table cellpadding="0" cellspacing="0" border="0" class="datatable table table-striped table-bordered">
					<thead>
						<tr>
							<th><strong>Sl. No</strong></th>
							<th><strong>User Name</strong></th>
							<th><strong> Email</strong></th>
							<th> <strong>Mobile</strong> </th>
							<th> <strong>Action</strong></th>
							

						</tr>
					</thead>
					<tbody>
                        {{#each allUsers}}
                            <tr class="gradeX">
                            <td>{{add @index '1'}}</td>
							<td>{{this.username}}</td>
							<td>{{this.email}}</td>
							<td>{{this.mobile}}</td>

							<td class="center">
                            {{#eq this.block 'true'}}
                                <a href="/admin/unblockuser/{{this._id}}" class="btn btn-success" onclick="return confirm('Are you sure you want to unblock : {{this.username}}')">Unblock</a>
                                {{else}}
                                <a href="/admin/blockuser/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to block : {{this.username}}')">Block</a>
                            {{/eq}}
                            
                            </td>
						</tr>    
                        {{/each}}
				</table>
			</div>
		</div>