<div id="wrap" class="container-fluid" style="padding-left: 285px;">
			<div class="">
            <h3>Order Management</h3>
                <table cellpadding="0" cellspacing="0" border="0" class="datatable table table-striped table-bordered">
					<thead>
						<tr>
							<th><strong>Sl. No</strong></th>
							<th><strong>Order Date</strong></th>
							<th><strong>Order ID</strong></th>
							<th><strong> User ID</strong></th>
							<th> <strong>Delvery Location</strong> </th>
							<th> <strong>Payement method</strong></th>
							<th> <strong>Order Total</strong></th>
							<th> <strong>Order Status</strong></th>
							<th> <strong>Action</strong></th>
						</tr>
					</thead>
					<tbody>
                        {{#each orders}}
                            <tr class="gradeX">
                            <td>{{add @index '1'}}</td>
							<td>{{this.orderDate}}</td>
							<td>{{this._id}}</td>
							<td>{{this.userId}}</td>
							<td>{{this.delivery.city}},{{this.delivery.pincode}}</td>
							<td>{{this.payment_method}}</td>
							<td>{{this.totalAmount}}</td>

                                    <td><a href="/admin/viewoderlist/{{this._id}}/{{this.userId}}" class="btn btn-success">View Order</a></td>

                            <td><a href="" class="btn btn-danger">Cancel</a></td>
						</tr>    
                {{/each}}
				</table>
			</div>
		</div>

