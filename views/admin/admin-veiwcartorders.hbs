<div id="wrap" class="container-fluid" style="padding-left: 285px;">
			<div class="">
            <h3>Order Management</h3>
                <table cellpadding="0" cellspacing="0" border="0" class="datatable table table-striped table-bordered">
					<thead>
						<tr>
							<th><strong>Sl. No</strong></th>
							<th><strong>Order Date</strong></th>
							<th><strong>Product ID</strong></th>
							<th><strong>User Name</strong></th>
							<th> <strong>Product Price</strong> </th>
							<th> <strong>Status</strong></th>
							<th> <strong>Destination</strong></th>
							<th> <strong>Payment</strong></th>
							<th> <strong>Total</strong></th>
						</tr>
					</thead>
					<tbody>
                        {{#each cartOrders}}
                            <tr class="gradeX">
                            <td>{{add @index '1'}}</td>
							<td>{{this.date}}</td>
							<td>{{this.proId}}</td>
							<td>{{this.userName}}</td>
							<td>{{this.proPrice}}</td>
                            
							{{#eq this.status 'placed'}}
							<td >
                                <select name="status" id="{{this.proId}}" class="dropdown btn btn-success dropdown-toggle" onchange="updateStatus('{{this._id}}','{{this.userId}}','{{this.proId}}')">
                                    <option value="placed" selected>Placed<i class="bi bi-chevron-down"></i></option>
                                    <option value="shipped">Shipped</option>
                                    <option value="delivered">Delivered</option>
                                </select>
                            </td>
                        {{/eq}}

                        {{#eq this.status 'shipped'}}
							<td >
                                <select name="status" id="{{this.proId}}" class="dropdown btn btn-success dropdown-toggle" onchange="updateStatus('{{this._id}}','{{this.userId}}','{{this.proId}}')">
                                    <option value="placed" >Placed</option>
                                    <option value="shipped" selected>Shipped<i class="bi bi-chevron-down"></i></option>
                                    <option value="delivered">Delivered</option>
                                </select>
                            </td>
                        {{/eq}}

                        {{#eq this.status 'delivered'}}
							<td >
                                <select name="status" id="{{this.proId}}" class="dropdown btn btn-success dropdown-toggle" onchange="updateStatus('{{this._id}}','{{this.userId}}','{{this.proId}}')">
                                    <option value="placed" >Placed</option>
                                    <option value="shipped">Shipped</option>
                                    <option value="delivered" selected>Delivered<i class="bi bi-chevron-down"></i></option>
                                </select>
                            </td>
                        {{/eq}}
							<td>{{this.destination}}</td>
							<td>{{this.payement}}</td>
							<td>{{this.total}}</td>
                            <td><a href="" class="btn btn-danger">Cancel</a></td>
						</tr>    
                {{/each}}
				</table>
			</div>
		</div>

        <script>
            function updateStatus(orderId,userId,proId){
                console.log(orderId,userId)
                var status = document.getElementById(proId).value
                console.log("status : ",status)
                $.ajax({
                    url : '/admin/updateorderstatus/',
                    data : {
                        orderId : orderId,
                        userId : userId,
                        status : status,
                    },
                    method : 'post',
                    success : (response)=>{
                    }
                })
            }
        </script>