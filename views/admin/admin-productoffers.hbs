    select {

        appearance: none;
        background-color: rgb(255, 255, 255);
        border: 1px solid black;
        border-radius: 8px;
        padding: 0 1em 0 0;
        margin: 0;
        width: auto;
        font-family: inherit;
        font-size: inherit;
        cursor: inherit;
        line-height: inherit;
    }

    select::-ms-expand {
        display: none;
    }

    select {

        outline: none;
    }
</style>