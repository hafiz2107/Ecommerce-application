<script>
    function checkCoupon1() {
        var couponCode = document.getElementById('coupon').value
        var totalPrice = document.getElementById('orderTotal').innerHTML
        var actualPrice = document.getElementById('actualPrice').value
        var userId = document.getElementById('user_id').value

        totalPrice = parseInt(totalPrice)
        $.ajax({

            url: '/checkcoupon/'+couponCode+'/'+userId,
            method: 'get',

            success: ({ coupon }) => {

                if (coupon.appliedCoupon) {
                    document.getElementById('alreadyUsedCoupon').style.display = 'block'
                    document.getElementById('coupon').style.backgroundColor = '#ff4747';
                    document.getElementById('orderTotal').innerHTML = actualPrice
                    document.getElementById('productprice').value = actualPrice
                    document.getElementById('couponEnterSuccess').style.display = 'none';

                }
                else if (coupon.appliedCoupon == false) {
                    //Calculating Discounted Price
                    var discountPrice = (totalPrice / 100) * coupon.coupon.coupondiscount


                    document.getElementById('orderTotal').innerHTML =  totalPrice - discountPrice
                    document.getElementById('productprice').value = totalPrice - discountPrice
                    document.getElementById('coupon').style.backgroundColor = '#47ff69';
                    document.getElementById('couponApplySuccess').style.display = 'block';
                    document.getElementById('couponApplySuccess').innerHTML = '<span style="color: red;">Coupon Applied <br> You are eligible for ' + coupon.coupon.coupondiscount + '% discount</span>'
                    document.getElementById('couponEnterSuccess').style.display = 'none';
                    document.getElementById('couponDontExist').style.display = 'none'
                }
                else if (coupon.couponDontExist) {
                    document.getElementById('coupon').style.backgroundColor = '#ff4747';
                    document.getElementById('orderTotal').innerHTML = actualPrice
                    document.getElementById('productprice').value = actualPrice
                    document.getElementById('couponEnterSuccess').style.display = 'none';
                    document.getElementById('couponApplySuccess').style.display = 'none';
                    document.getElementById('couponDontExist').innerHTML = '<span style="color: red;">Invalid Coupon entered</span>'
                } else {
                    document.getElementById('coupon').style.backgroundColor = '#ff4747';
                    document.getElementById('orderTotal').innerHTML = actualPrice
                    document.getElementById('productprice').value = actualPrice
                    document.getElementById('couponEnterSuccess').style.display = 'none';
                    document.getElementById('couponApplySuccess').style.display = 'none';
                    document.getElementById('couponDontExist').innerHTML = '<span style="color: red;">Invalid Coupon entered</span>'
                }
            }
        })
    }
</script>

