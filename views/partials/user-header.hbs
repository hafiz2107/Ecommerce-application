          <div class="">

            {{!-- Search form --}}
            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
              aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Search</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">


                    <div class="">
                    <form class="search-form">
                      <div class="input-group">
                        <div class="row">
                         

                            <div class="input-group">
                              <input type="text" class="form-control" id="searchKey" placeholder="Type Your Search Words" style="display: inline;" />
                              <span class="input-group-btn">
                                <label for="searchKey" class="btn" onclick="search()"><i  class="fa fa-search"
                                    style="display: inline;color: black;"></i></label>
                              </span>
                            </div>

                        {{!-- <input type="text" class="form-control" id="searchKey" placeholder="Type Your Search Words" style="display: inline;"/>
                        <label for="searchKey" class="btn btn-success" onclick="search()"><i class="fa fa-search" style="display: inline;"></i></label> --}}
                       
                        </div>
                      </div>

                      {{!-- Search Result --}}
                      <div>
                        <div id="list">

                        </div>
                        <div id="searchRsltErr">

                        </div>
                      </div>
                      {{!-- Search Result ends --}}
                    </form>
                    </div>
           
                    {{!-- Script For searching --}}
                    <script>
                      function search() {
                        var searchKey = document.getElementById('searchKey').value
                        console.log(searchKey)
                        if(searchKey != ''){
                        document.getElementById('list').innerHTML = ''

                        $.ajax({
                          url: '/search',
                          data: {
                            key: searchKey,
                          },
                          method: 'post',
                          success: (response) => {
                            console.log(response)
                            document.getElementById('searchRsltErr').style.display = 'none'

                            if (response.length > 0) {
                              var result = []

                              for (i = 0; i < response.length; i++) {
                                result[i] = { name: response[i].productname, id: response[i]._id }
                              }


                              var ul = document.getElementById('list')
                              var atag = []
                              for (i = 0; i < result.length; i++) {
                              
                                  atag[i] = document.createElement('a')
                                  atag[i].setAttribute('id', `${result[i].id}`);
                                  atag[i].innerHTML = `${result[i].name}`
                                  atag[i].href = `/productview/${result[i].id}`

                                  $("#list").append(`<a href="${atag[i]}" style="margin-left: 25px;"> <img src="/uploads/${result[i].id}__1.jpg"  style="height: 50px;float:left;border-radius:80px" alt="">${result[i].name}</a>`);
                                  $("#list").append(`<hr>`)
                                  $("#list").append(`<br>`)
                              }
                              
                            } else {
                              document.getElementById('list').innerHTML = ''
                              document.getElementById('searchRsltErr').style.display = 'block'
                              document.getElementById('searchRsltErr').innerHTML = '<span style="color:red">No items match your search</span>'
                            }

                          }
                        })
                        }else{
                            document.getElementById('list').innerHTML = ''
                            document.getElementById('searchRsltErr').style.display = 'block'
                            document.getElementById('searchRsltErr').innerHTML = '<span style="color:red">Please enter any key to search</span>'
                        }
                      }
                    </script>
                  {{!-- Script For searching ends --}}

                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  </div>
                </div>
              </div>
            </div>

            {{!-- Search form ends --}}



